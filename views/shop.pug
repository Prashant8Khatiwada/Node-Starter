extends layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/shop.css")

block content
    h1 My Products
    .grid
        if prods.length > 0
            each product in prods
                article.card
                    h1 #{product.title}
                    .card__image
                        img(src=product.imageUrl, alt=product.title)
                    .card__content
                        h2 $#{product.price}
                        p #{product.description}
                    .card__actions
                        button Add to Cart
        else
            h1 No Products Found!
